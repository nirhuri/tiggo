{
  "name": "mobile-gateway",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production ts-node-dev --poll src/container/index.ts",
    "test": "NODE_ENV=test jest --watchAll --no-cache",
    "test:ci": "jest --forceExit --detectOpenHandles --maxWorkers=10",
    "build": "tsc && npx tsc-alias",
    "prod": "npm install --production && del dist && npm run build && cd dist && pm2 delete MOBILE_GATEWAY || : && pm2 start NODE_ENV=production src/index.js --name MOBILE_GATEWAY"
  },
  "author": "Nir & Ron",
  "license": "ISC",
  "dependencies": {
    "@machsan-tiggo/common": "^0.0.27",
    "axios": "^0.27.2",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "inversify": "^6.0.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "typescript": "^4.8.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.14",
    "@types/supertest": "^2.0.12",
    "jest": "^28.1.3",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.8",
    "ts-node-dev": "^2.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
