{
  "name": "transactions",
  "version": "1.0.0",
  "description": "transaction microservice",
  "main": "index.js",
  "scripts": {
    "start": "ts-node-dev --poll src/container/index.ts",
    "test": "NODE_ENV=test jest --watchAll --no-cache",
    "test:ci": "jest --forceExit --detectOpenHandles --maxWorkers=10",
    "build": "tsc && npx tsc-alias",
    "prod": "npm install --production && del dist && npm run build && cd dist && pm2 delete TRANSACTIONS || : && pm2 start NODE_ENV=production src/index.js --name TRANSACTIONS"
  },
  "author": "Nir & Ron",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.7",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/supertest": "^2.0.12",
    "jest": "^28.1.3",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.8"
  },
  "dependencies": {
    "@hurinir/common": "^1.1.27",
    "@machsan/common": "^1.0.0",
    "class-validator": "^0.12.2",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.14.2",
    "inversify": "^6.0.1",
    "node-nats-streaming": "^0.3.2",
    "routing-controllers": "^0.9.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  }
}
